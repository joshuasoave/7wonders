<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('./partials/head.ejs') %>
    <title>Edit <%=wonder.name%></title>
  </head>
  <body>
    <header>
      <%- include('./partials/logout.ejs') %>
      <h1>Edit <%=wonder.name%></h1>
      <nav>
        <%- include('./partials/nav.ejs') %>
      </nav>
    </header>
    <div class="container">
      <form action="/wonders/<%=wonder.id%>?_method=PUT" method="POST">
        <fieldset>
          <legend>Wonder Basic Info</legend>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="name">Name</label>
              <input type="text" name="name" value="<%=wonder.name%>" class="form-control">
            </div>
            <div class="form-group col-md-6">
              <label for="location">Location</label>
              <input type="text" name="location" value="<%=wonder.location%>" class="form-control">
            </div>
            <div class="form-group col-md-6">
              <label>Year Built</label>
              <input type="text" name="year" value="<%=wonder.year%>" class="form-control">
            </div>
          </fieldset>
          </div>


        <fieldset>
          <div class="form-group col-md-6">
            <legend>Wonder Description</legend>
            <textarea name="description" rows="8" cols="80" class="form-control"><%=wonder.description%></textarea>
          </div>
          <div class="form-group col-md-6">
            <legend>Image Link</legend>
            <input type="text" name="img" value="<%=wonder.img%>" class="form-control">
          </div>
        </fieldset>
        <div class="form-btns form-group col-md-6">
          <fieldset>
            <input type="submit" value="Submit" class="btn btn-primary">
          </fieldset>
        </form>
        </div>
    </div>
  </body>
</html>
