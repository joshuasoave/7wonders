<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('../partials/head.ejs') %>
    <title><%=wonder.name%></title>
  </head>
  <body>
    <header>
      <%- include('../partials/logout.ejs') %>
      <h1>7 Wonders of the World</h1>
      <nav>
        <%- include('../partials/nav.ejs') %>
      </nav>
    </header>
    <div class="container">
      <div class="wonder-show">
        <div class="show-header">
          <h1><%=wonder.name%></h1>
          <p><%=wonder.location%></p>
          <p>Built in <%=wonder.year%></p>
        </div>
        <img src="<%=wonder.img%>" alt="a picture of  <%=wonder.name%>">
        <div class="description">
          <p><%=wonder.description%></p>
        </div>
        <div class="wonder-btns">
          <form action="/wonders/original" method="GET">
            <input type="submit" value="Back" class="btn btn-secondary">
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
