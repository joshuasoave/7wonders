<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('./partials/head.ejs') %>
    <title><%=wonder.name%></title>
  </head>
  <body>
    <header>
      <%- include('./partials/logout.ejs') %>
      <h1>20 Wonders of 2020</h1>
      <nav>
        <%- include('./partials/nav.ejs') %>
      </nav>
    </header>
    <div class="container">
      <div class="wonder-show">
        <div class="show-header">
          <h1><%=wonder.name%></h1>
          <p><%=wonder.location%></p>
          <p>Built in <%=wonder.year%></p>
        </div>
        <img src="<%=wonder.img%>" alt="a picture of  <%=wonder.name%>">
        <div class="description">
          <p><%=wonder.description%></p>
        </div>
        <div class="wonder-btns">
          <form action="/wonders" method="GET">
            <input class="btn btn-secondary" type="submit" value="Back">
          </form>
          <form action="/wonders/<%=wonder.id%>/edit" method="GET">
            <input class="btn btn-primary" type="submit" value="Edit">
          </form>
          <form action="/wonders/<%=wonder.id%>?_method=DELETE" method="POST">
            <input class="btn btn-primary" type="submit" value="Delete">
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
